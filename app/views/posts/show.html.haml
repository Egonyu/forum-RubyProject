#post_content
	%h1= @post.title

	%p= @post.content

	#comments
		%h2
			= @post.comments.count
			Comments
		= render @post.comments

		%h3 Reply to thread
		= render "comments/forms"
		%br/
		%hr/
		%br/

	= link_to "Edit", edit_post_path(@post), class: "button"
	= link_to "Delet", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to do this ?"}, class: "button"
